<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <TextView
            android:id="@+id/lblRegistroPO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro PO"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:id="@+id/etPO"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblRegistroPO"
            android:hint="Ingresar PO"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/ivFotoProceso"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/etPO"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btnFotoProceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblRegistroPO"
            android:layout_toRightOf="@id/etPO"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="Foto" />
        <Button
            android:id="@+id/btnGuardarProceso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivFotoProceso"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="Guardar" />
        <Button
            android:id="@+id/btnTerminarProceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnGuardarProceso"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="80dp"
            android:textSize="20sp"
            android:text="Terminar" />
    </RelativeLayout>
</ScrollView>