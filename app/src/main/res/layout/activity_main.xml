<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <TextView
            android:id="@+id/lblUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:id="@+id/txtPatente"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblUsuario"
            android:hint="Patente"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/txtSello"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPatente"
            android:hint="Sello"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/txtFecha"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSello"
            android:hint="Seleccione Fecha"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/txtFecha"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btnFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPatente"
            android:layout_toRightOf="@id/txtSello"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="Foto" />
        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivFoto"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="Enviar" />
    </RelativeLayout>
</ScrollView>